# Timeweb Cloud Configuration
# Этот файл указывает Timeweb как собирать и запускать приложение

# Команда для сборки
build_command: cd flower-shop && npm install --legacy-peer-deps && npm run build
start_command: cd flower-shop && npm start
port: 3000
environment:
  NODE_ENV: production
  PORT: 3000
  HOSTNAME: 0.0.0.0
workdir: .
copy_files:
  - flower-shop/
  - package.json
  - package-lock.json
