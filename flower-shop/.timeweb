# Timeweb Cloud Configuration
# Этот файл указывает Timeweb как собирать и запускать приложение

# Команда для сборки
build_command: echo "Static files ready"
start_command: echo "Starting server" && python3 -m http.server 3000
port: 3000
environment:
  NODE_ENV: production
  PORT: 3000
workdir: .
copy_files:
  - flower-shop/
