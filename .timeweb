# Timeweb Cloud Configuration
# Этот файл указывает Timeweb как собирать и запускать приложение

# Тип развертывания
deploy_type: docker

# Dockerfile для использования
dockerfile: Dockerfile

# Порт для приложения
port: 80

# Переменные окружения
environment:
  NODE_ENV: production
  PORT: 80

# Рабочая директория
workdir: .

# Файлы для копирования
copy_files:
  - flower-shop/
  - Dockerfile
